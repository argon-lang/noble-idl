{
  "name": "@argon-lang/noble-idl-compiler-js",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "exports": {
    ".": "./lib/index.js"
  },
  "bin": "./lib/main.js",
  "scripts": {
    "regenerate-api": "npm run build && node --enable-source-maps lib/regenerate-api.js",
    "build-wasm": "cross-env RUSTFLAGS=\"-C target-feature=+multivalue\" cargo build -p noble-idl-compiler --target=wasm32-unknown-unknown --release",
    "codegen": "npm run build-wasm && node generate-wasm-module.js",
    "build": "npm run codegen && tsc --project .",
    "test": "npm run build && vitest run --root lib"
  },
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/validate-npm-package-name": "^4.0.2",
    "cross-env": "^7.0.3",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@argon-lang/esexpr": "^0.1.10",
    "@argon-lang/noble-idl-core": "file:../runtime",
    "typescript": "^5.5.4",
    "validate-npm-package-name": "^5.0.1"
  }
}
